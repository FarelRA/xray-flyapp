{
    "inbounds": [
        {
            "listen": "/app/sockets/vmess","protocol": "vmess",
            "settings": {"clients": [{"id": "$UUID"}]},
            "streamSettings": {"network": "ws","wsSettings": {"path": "/vmess"}}
        },
        {
            "listen": "/app/sockets/vless","protocol": "vless",
            "settings": {"clients": [{"id": "$UUID"}],"decryption": "none"},
            "streamSettings": {"network": "ws","wsSettings": {"path": "/vless"}}
        },
        {
            "listen": "/app/sockets/trojan","protocol": "trojan",
            "settings": {"clients": [{"password":"$UUID"}]},
            "streamSettings": {"network": "ws","wsSettings": {"path": "/trojan"}}
        },
        {   "port": 5234,"listen": "127.0.0.1","protocol": "socks",
            "settings": {"auth": "password","accounts": [{"user": "socks","pass": "$UUID"}]},
            "streamSettings": {"network": "ws","wsSettings": {"path": "/socks"}}
        }
    ],
    
    "outbounds": [
        {"protocol": "freedom","tag": "direct","settings": {}},
        {"protocol": "blackhole","tag": "block","settings": {}},
        {"protocol": "socks","tag": "sockstor","settings": {"servers": [{"address": "127.0.0.1","port": 9050}]}},
        {"protocol": "freedom","tag": "local","settings": {"redirect": "127.0.0.1:0"}}
    ],

    "routing": {
        "rules": [
            {"type": "field","domain": ["geosite:category-ads-all"],"outboundTag": "block"},
            {"type": "field","domain": ["geosite:tor"],"outboundTag": "sockstor"},

            {"type": "field","domain": ["full:$appName.fly.dev"],"port": "7000,7001","outboundTag": "local"},
            {"type": "field","ip": ["$appIP/32"],"port": "7000,7001","outboundTag": "local"},

            {"type": "field","port": "0-65535","outboundTag": "direct"}
        ]
    }
}
